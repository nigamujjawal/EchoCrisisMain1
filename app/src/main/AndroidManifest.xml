<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uj.echocrisismain">

    <!-- Internet permission for Firebase or network access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="EchoCrisis"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EchoCrisis">

        <!-- Launcher Activity: Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register screen -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Register" />

        <!-- Profile Setup screen -->
        <activity
            android:name=".ProfileSetupActivity"
            android:exported="false"
            android:label="Profile Setup" />

        <!-- Profile Viewing screen -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="Profile" />

        <!-- Emergency Contact screen -->
        <activity
            android:name=".EmergencyContact"
            android:exported="false"
            android:label="Emergency Contact" />

        <!-- MainActivity2: Welcome / intermediate screen -->
        <activity
            android:name=".MainActivity2"
            android:exported="false"
            android:label="Welcome" />

        <!-- âœ… Dashboard screen (Where 4 buttons are shown) -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:label="Dashboard" />

        <!-- 4 Functional Screens -->
        <activity
            android:name=".MentalSupportActivity"
            android:exported="false"
            android:label="Mental Support" />

        <activity
            android:name=".LegalHelpActivity"
            android:exported="false"
            android:label="Legal Help" />

        <activity
            android:name=".SchemeActivity"
            android:exported="false"
            android:label="Government Schemes" />

        <activity
            android:name=".ShelterActivity"
            android:exported="false"
            android:label="Nearby Shelters" />

    </application>

</manifest>
