<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="80dp"> <!-- Added top padding -->

        <!-- Heading -->
        <TextView
            android:text="Complete Your Profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Full Name -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name" />

        <!-- Phone -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:layout_marginTop="10dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp" />

        <!-- Gender -->
        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <!-- DOB -->
        <EditText
            android:id="@+id/etDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:focusable="false"
            android:layout_marginTop="10dp" />

        <!-- Location -->
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City or Area"
            android:layout_marginTop="10dp" />

        <!-- State -->
        <EditText
            android:id="@+id/etState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:layout_marginTop="10dp" />

        <!-- Crisis Type -->
        <EditText
            android:id="@+id/etCrisisType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of Crisis"
            android:layout_marginTop="10dp" />

        <!-- Recovery Stage -->
        <EditText
            android:id="@+id/etRecoveryStage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recovery Stage"
            android:layout_marginTop="10dp" />

        <!-- Occupation -->
        <EditText
            android:id="@+id/etOccupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Occupation"
            android:layout_marginTop="10dp" />

        <!-- Medical Needs -->
        <EditText
            android:id="@+id/etMedicalNeeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medical Needs / Disabilities"
            android:layout_marginTop="10dp" />

        <!-- Urgent Help -->
        <CheckBox
            android:id="@+id/checkUrgentHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I need urgent help"
            android:layout_marginTop="15dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
